{
    "version": 2,
    "builds": [
        {
            "src": "src/index.js",
            "use": "@now/node-server"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/src/api.js"
        },
        {
            "src": "/(.*)",
            "dest": "/src/index.js"
        }
    ],
    "functions": {
        "apiRoutes": {
            "handler": "src/api.apiRoutes",
            "memory": 1024
        },
        "pageRoutes": {
            "handler": "src/pages.pageRoutes",
            "memory": 1024
        }
    }
}